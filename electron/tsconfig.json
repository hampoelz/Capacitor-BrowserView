{
  "extends": "../configs/strict",
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "target": "es2017",

    "declaration": true,
    "sourceMap": true,
    "outDir": "build",

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    
    "pretty": true,
  },
  "include": [
    "src/**/*"
  ]
}
